<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image1" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/like_btn"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="@id/photo"
            app:layout_constraintEnd_toStartOf="@id/flipView"
            android:padding="8dp"
            android:src="@drawable/ic_favorite"
            android:background="@drawable/icons_bg_shape"
            app:tint="@color/colorIcons"
            tools:visibility="visible"/>
        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:id="@+id/flipView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flipOnTouch="true"
            app:flipEnabled="true"
            app:flipDuration="400"
            app:flipFrom="left"
            app:flipType="horizontal"
            app:autoFlipBack="false"
            app:layout_constraintBottom_toBottomOf="@id/photo"
            app:layout_constraintEnd_toEndOf="@id/photo">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/download_check_btn"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_check"
                android:background="@drawable/icons_bg_shape"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo"
                app:tint="@color/colorChecked" />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/download_btn"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_download"
                android:background="@drawable/icons_bg_shape"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo"
                app:tint="@color/colorIcons"
                tools:visibility="visible"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>